        </field>

       <field name="limit"
               type="limitbox"
               label="COM_BLOGG_LIST_LIMIT"
               description="COM_BLOGG_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>